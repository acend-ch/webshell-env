{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm", "nvm","github-actions","dockerfile","regex","terraform"],
      "groupName": "{{manager}}"
    }
  ],
  "regexManagers": [
    {
      "customType": "regex",
      "description": "Update ARG versions of services in Dockerfiles",
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG .*?_VERSION=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "docker"
    }
  ]
}
